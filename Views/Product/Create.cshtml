@model IGRTEC_WEBApplication_MichellAlejandroGarciaVargas.Models.ProductModel

@{
    ViewData["Title"] = "Product Create";
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="text-lg mb-1">Title</label>
        <input asp-for="title" class="form-control mb-3" required/>
    </div>
    <div class="form-group">
        <label class="text-lg mb-1">Price</label>
        <input asp-for="price" class="form-control mb-3" type="number" step="0.01" required />
    </div>
    <div class="form-group">
        <label class="text-lg mb-1">Description</label>
        <input asp-for="description" class="form-control mb-3" required />
    </div>
    <div class="form-group">
        <label class="text-lg mb-1">Category</label>
        <select asp-for="category.id" class="form-control mb-3" asp-items="@(new SelectList(ViewBag.Categories, "id", "name"))" required>
            <option value="">Select a category</option>
        </select>
    </div>
    <div class="form-group">
        <label class="text-lg mb-1">Upload Image</label>
        <input type="file" name="imageFile" class="form-control mb-3" required/>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
