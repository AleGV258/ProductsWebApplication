@model IGRTEC_WEBApplication_MichellAlejandroGarciaVargas.Models.ProductModel

@{
    ViewData["Title"] = "Product Update";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label class="text-lg mb-1">Title</label>
        <input asp-for="title" class="form-control mb-3" />
    </div>
    <div class="form-group">
        <label class="text-lg mb-1">Price</label>
        <input asp-for="price" class="form-control mb-3" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label class="text-lg mb-1">Description</label>
        <input asp-for="description" class="form-control mb-3" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
